@model IEnumerable<AspCoreSD.Models.Contadorescliente>

@{
    ViewData["Title"] = "Index";
}

<h2>Listado contadores por cliente</h2>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IdCliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdContador)
            </th>
            <th>
                <a asp-action="Create" class="fa-sharp fa-solid fa-toggle-large-off"><i class="fa-sharp fa-solid fa-square-plus"></i>Asociar cliente contador</a>
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdCliente)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdContador)
            </td>
            <td>
                <a asp-action="AddOrEdit" asp-route-id="@item.Id"><i class="fa-solid fa-pen-to-square"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('¿Esta seguro de eliminar el registro?')"><i class="fa-sharp fa-solid fa-square-xmark"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
